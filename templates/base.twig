{% block html_head_container %}

	{% include 'html-header.twig' %}

	{% block head %}{% endblock %}

</head>{% endblock %}<body class="{{body_class}}" data-template="base.twig">

<div class="site">

	<a class="skip-link" href="#content">{{ _e( 'Skip to content') }}</a>

	{% if options.announcement.copy or options.announcement.link.url %}
		{% include 'blocks/announcement.twig' %}
	{% endif %}

	{% block header %}
		{% include 'site-header.twig' %}
	{% endblock %}

	<main id="content">
		{% if title %}
			{% block title %}
				{% include 'blocks/page-title.twig' %}
			{% endblock %}
		{% endif %}

		{% if sidebar %}
			<div class="container">
				<div class="row">
					<div class="col-lg-8 {{ fn('is_singular', 'page') ? 'order-lg-1' : 'order-lg-2' }} content-col">
					{% endif %}

					{% block content %}
						Sorry, no content
					{% endblock %}

					{% if sidebar %}
					</div>

					<div class="col-lg-4 {{ fn('is_singular', 'page') ? 'order-lg-2' : 'order-lg-1' }} sidebar-col">
						<aside class="sidebar">
							{% block sidebar %}{# Sidebar #}{% endblock %}
						</aside>
					</div>
				</div>
			</div>
		{% endif %}

		{% if below_modules %}
			<aside class="below">
				{% block below %}{# Below modules #}{% endblock %}
			</aside>
		{% endif %}

		{% if post.meta('show_aidsline_cta') == true %}
			{% include 'blocks/module-cta-single.twig' with { 'module_name' : 'cta-single', 'module_style' : 'geometric-bg', 'module' : options.aidsline_cta } %}
		{% endif %}
	</div>
</main>

{% block footer %}
	{% include 'site-footer.twig' %}
	{{ function('wp_footer') }}
{% endblock %}</body></div></body></html>
