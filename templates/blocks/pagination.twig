<div class="pagination pagination--{{ pagination_style|replace('_', '-') }}">
	{% if pagination_style == 'load_more' and posts.pagination.total > 1 %}

		<button class="button load-more">Load More</button>

	{% elseif pagination_style == 'traditional' and posts.pagination.prev or posts.pagination.next %}

		<div class="row">
			{% if posts.pagination.prev %}
				<div class="col pagination__prev">
					<a href="{{ posts.pagination.prev.link }}">
						<i aria-hidden="true" class="fas fa-arrow-left"></i>
						Previous
					</a>
				</div>
			{% endif %}

			{% if posts.pagination.next %}
				<div class="col pagination__next">
					<a href="{{ posts.pagination.next.link }}">
						Next
						<i aria-hidden="true" class="fas fa-arrow-right"></i>
					</a>
				</div>
			{% endif %}
		</div>

	{% endif %}
</div>
