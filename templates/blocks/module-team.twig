{% extends 'blocks/module.twig' %}

{# Staff or Board in UI #}

{% block content %}

	{% if module.heading %}
		<h2 class="team__heading">{{ module.heading }}</h2>
	{% endif %}

	{% if module.members|length > 0 %}

		{% for member in module.members %}

			<div class="team__member">
				{% include 'blocks/member.twig' with { 'image' : Image(member.image), 'name' : member.name, 'title' : member.title, 'pronouns' : member.pronouns, 'bio' : member.bio, 'link' : member.link } %}
			</div>

		{% endfor %}

	{% endif %}

{% endblock %}
