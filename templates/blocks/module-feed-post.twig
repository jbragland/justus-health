{% extends 'blocks/module.twig' %}

{% block content %}

	{% if module.heading %}
		<h2 class="feed-post__heading">{{ module.heading }}</h2>
	{% endif %}

	{% if module.posts|length > 0 %}
		<div class="row">
			{% for post in module.posts %}
				<div class="col-md-4 feed-post__col">
					{% include 'blocks/excerpt.twig' with { 'show_header' : false, 'show_footer' : true } %}
				</div>
			{% endfor %}
		</div>
	{% endif %}

{% endblock %}
