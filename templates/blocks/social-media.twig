{% if options.social_media %}
	<ul class="social-media">
		{% for item in options.social_media %}
			<li class="social-media__item">
				<a class="social-media__link" href="{{ item.link.url }}" target="{{ item.link.target }}">
					<span class="sr-only">{{ item.link.title }}</span>
				</a>
			</li>
		{% endfor %}
	</ul>
{% endif %}
