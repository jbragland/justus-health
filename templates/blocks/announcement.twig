<div class="announcement">
	<div class="container">
		<div class="announcement__inner">
			{% if options.announcement.copy %}
				<div class="announcement__copy wysiwyg">
					{{ options.announcement.copy }}
				</div>
			{% endif %}

			{% if options.announcement.link.url %}
				<div class="announcement__link">
					<a href="{{ options.announcement.link.url }}" target="{{ options.announcement.link.target }}">
						{{ options.announcement.link.title }}
					</a>
					&nbsp;<i aria-hidden="true" class="fas fa-arrow-right"></i>
				</div>
			{% endif %}
		</div>
	</div>
</div>
